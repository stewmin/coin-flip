  <script>
    const bgAudio = document.getElementById('bgMusic');
    let muted = false;
    if (localStorage.getItem('vaultAudioMuted') === 'true') {
      muted = true;
      bgAudio.muted = true;
    }
    function toggleAudio() {
      muted = !muted;
      bgAudio.muted = muted;
      localStorage.setItem('vaultAudioMuted', muted);
    }
    function playSFX(id) {
      const sfx = document.getElementById(id);
      if (!muted) sfx.play();
    }
  </script>
